{
  "id": null,
  "uid": "polyglot-http",
  "title": "Polyglot Lab - HTTP Metrics",
  "tags": ["polyglot", "http"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_requests_total, service)",
        "includeAll": true,
        "multi": true,
        "refresh": 1,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests Total by Service",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(service) (http_requests_total{service=~\"$service\"})",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "HTTP Request Rate (per service/method/status)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by(service, method, status) (rate(http_requests_total{service=~\"$service\"}[5m]))",
          "legendFormat": "{{service}} {{method}} {{status}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "HTTP Duration p95 (per path)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, service, path) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])))",
          "legendFormat": "{{service}} {{path}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Build Info (one per service)",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "build_info{service=~\"$service\"}",
          "legendFormat": "{{service}} {{version}} ({{build_time}})"
        }
      ]
    }
  ]
}
